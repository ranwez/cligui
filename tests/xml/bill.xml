<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<tool id="bill" name="bill" version="testVersion">
<description>store data about billing</description>
<command>CLI.jar -prog bill -attachment \"$attachment\" -currency $currency -gencode $gencode -id $id -name \"$name\" -price $price -priority $priority -receipt \"$receipt\" -receiver \"$receiver\"</command>
<inputs>
<param label="id : bill ID" name="id" type="integer" value="0"/>
<param label="name : product name" name="name" type="text"/>
<param label="price : product price" name="price" type="float" value="0.0"/>
<param label="attachment : optional file linked to the bill" name="attachment" optional="true" type="data"/>
<param label="currency : currency used for billing values" name="currency" optional="true" type="text" value="$"/>
<param label="gencode : gencode of the product" name="gencode" type="select">
<option value="01">4953323</option>
<option value="02">6468489</option>
</param>
<param label="priority : priority of the bill" name="priority" type="select">
<option value="0">LOW</option>
<option selected="true" value="1">MEDIUM</option>
<option value="2">HIGH</option>
</param>
<param label="receiver : the name of the receiver of the bill" name="receiver" type="select">
<option selected="true" value="George Washington"/>
<option value="Luke Skywalker"/>
</param>
</inputs>
<outputs>
<data format="txt" label="receipt" name="receipt">
<filter>receipt</filter>
</data>
</outputs>
<help>store data about billing</help>
</tool>
